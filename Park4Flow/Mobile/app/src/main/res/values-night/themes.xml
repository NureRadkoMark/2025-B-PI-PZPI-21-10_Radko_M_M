<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BachelorProjectParkingSystem" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>
    <style name="Theme.Park4Flow.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Делает статусбар прозрачным -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Фоновый цвет окна по умолчанию -->
        <item name="android:windowBackground">@drawable/park4flow_light</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.Park4Flow.BachelorProject.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Делает статусбар прозрачным -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_green</item>
        <item name="colorSecondaryVariant">@color/dark_green</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/text_dark</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/text_dark</item>
        <item name="colorOnSurface">@color/gray_light</item>

        <!-- Error color -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/text_dark</item>

        <!-- Text appearances -->
        <item name="android:textColorPrimary">@color/gray_light</item>
        <item name="android:textColorSecondary">@color/gray_dark</item>

        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.Park4Flow.Button</item>

        <!-- Custom attributes -->
        <item name="cardBackgroundColor">@color/text_dark</item>
        <item name="iconTint">@color/gray_light</item>
    </style>
    <!-- Button style -->
    <style name="Widget.Park4Flow.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">24dp</item>
    </style>
</resources>