<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/park4flow_light"
    android:padding="16dp">


        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
            android:id="@+id/addVehicleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Vehicle"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/colorOnSurface"
            android:layout_marginTop="100dp" />

            <EditText
            android:id="@+id/vehicleCategoryInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addVehicleTitle"
            android:layout_marginTop="24dp"
            android:hint="Vehicle Category (A, B, C, D)"
            android:textSize="20sp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textStyle="italic"
            android:drawablePadding="8dp"/>

            <EditText
            android:id="@+id/stateNumberInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vehicleCategoryInput"
            android:layout_marginTop="12dp"
            android:hint="State Number"
            android:textSize="20sp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textStyle="italic"
            android:drawablePadding="8dp"/>

            <EditText
            android:id="@+id/vehicleBrandInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/stateNumberInput"
            android:layout_marginTop="12dp"
            android:hint="Brand"
            android:textSize="20sp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textStyle="italic"
            android:drawablePadding="8dp"/>

            <EditText
            android:id="@+id/vehicleModelInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vehicleBrandInput"
            android:layout_marginTop="12dp"
            android:hint="Model"
            android:textSize="20sp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textStyle="italic"
            android:drawablePadding="8dp"/>

            <Button
            android:id="@+id/uploadImageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vehicleModelInput"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_button"
            android:text="Upload Photo"
            android:textColor="@android:color/white" />

            <Button
            android:id="@+id/addVehicleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/uploadImageButton"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_button"
            android:text="Add Vehicle"
            android:textColor="@android:color/white" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>