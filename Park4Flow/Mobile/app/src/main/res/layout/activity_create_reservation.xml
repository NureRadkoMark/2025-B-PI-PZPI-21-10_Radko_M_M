<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/park4flow_light">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Reservation"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/colorOnSurface"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/startTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Time"
                android:textSize="18sp"
                android:layout_below="@id/titleText"
                android:layout_marginTop="32dp"
                android:textColor="@color/colorOnSurface" />

            <EditText
                android:id="@+id/startTimeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/startTimeLabel"
                android:layout_marginTop="8dp"
                android:focusable="false"
                android:hint="Select Start Time"
                android:background="@drawable/edittext_background"
                android:drawableStart="@drawable/baseline_access_time_24"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/endTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Time"
                android:textSize="18sp"
                android:layout_below="@id/startTimeInput"
                android:layout_marginTop="24dp"
                android:textColor="@color/colorOnSurface" />

            <EditText
                android:id="@+id/endTimeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/endTimeLabel"
                android:layout_marginTop="8dp"
                android:focusable="false"
                android:hint="Select End Time"
                android:background="@drawable/edittext_background"
                android:drawableStart="@drawable/baseline_access_time_24"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/createReservationButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/endTimeInput"
                android:layout_marginTop="32dp"
                android:text="Create Reservation"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@null" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
